{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "installCommand": "pnpm install",
  "outputDirectory": "dist",
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/node-build.mjs"
    },
    {
      "src": "/(.*)",
      "dest": "/spa/index.html"
    }
  ]
}
