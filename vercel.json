{
  "version": 2,
  "builds": [
    {
      "src": "dist/spa/index.html",
      "use": "@vercel/static",
      "config": {
        "distDir": "dist/spa"
      }
    },
    {
      "src": "dist/server/node-build.mjs",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/server/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server/node-build.mjs"
    },
    {
      "src": "/(.*)",
      "dest": "dist/spa/index.html"
    }
  ],
  "buildCommand": "npm run vercel-build",
  "installCommand": "pnpm install",
  "env": {
    "NODE_ENV": "production"
  }
}
