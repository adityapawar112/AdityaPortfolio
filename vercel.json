{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "installCommand": "pnpm install",
  "outputDirectory": "dist",
  "functions": {
    "server/node-build.mjs": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/node-build.mjs"
    },
    {
      "src": "/(.*)",
      "dest": "/spa/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
